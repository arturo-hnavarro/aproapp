<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Approagro.Pages.PageRegistrarTipo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registrar nuevo tipo de actividad" FontSize="Title" Padding="30,10,30,10" TextColor="Black"/>

            <Label Text="Nombre" FontSize="Large" Padding="30,10,30,0" TextColor="Black"/>
            <Entry x:Name="EntryActivityName"
                   Placeholder="Nombre actividad. Ej: Siembra de café.">
            </Entry>

            <Label Text="Descripción" FontSize="Large" Padding="30,10,30,0" TextColor="Black"/>
            <Entry x:Name="EntryActivityDescription"
                   Placeholder="Un pequeño detalle u observación para referencia."
                    VerticalOptions="StartAndExpand">
            </Entry>

            <Button Text="Registrar"
                Clicked="OnRegisterTypeActivityClick"
                BackgroundColor="LightGreen"
                FontSize="Title"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
